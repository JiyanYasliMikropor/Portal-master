@{
    Layout = "_LayoutACSAdmin";
}
<style>
    .contentText {
        float: left;
        width: 100%;
        padding: 0px 0px 6px 0px;
        margin-bottom: 8px;
        border-bottom: 1px solid #efefef;
    }

    .font-normal {
        float: left;
        width: 100%;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Yetkili Servis Ekle</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-action="Index" asp-controller="Home">Anasayfa</a>
            </li>
            <li class="active">
                <strong>Yetkili Servis Ekle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="ibox float-e-margins" style="margin-top:15px">
    <div class="ibox-title">
        <h5>Yetkili Servis Ekle</h5>

        <span class="pull-right text-right text-danger">

            <small>(*) İşaretli alanlar zorunludur. </small>

        </span>
    </div>
    <div class="ibox-content">
        <form id="AddAuthorizedServiceForm" method="post" class="form-horizontal">
            <div class="row">
                <div class="col-md-4">
                    <div class="col-md-6">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="font-normal">Adı *</label>
                                <input id="UserName" name="UserName" type="text" required="required" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="font-normal">Soyadı *</label>
                                <input id="UserLastName" name="UserLastName" type="text" required="required" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="font-normal">Firma *</label>
                                <input id="CompanyName" name="CompanyName" type="text" required="required" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="font-normal">Email *</label>
                                <input id="Email" name="Email" type="Email" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row"></div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 text-right pull-right">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-white">İptal</a>
                            <button id="AddAuthorizedService" type="submit" value="AddAuthorizedService" formaction="AddAuthorizedService/AddService" formmethod="post" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


<script>
    $(document).ready(function () {
        getInboxCount();
    });
    function getInboxCount() {
        $('#reportListDataContent').text("");
        $.ajax({
            type: "GET",
            dataType: 'json',
            data: null,
            url:"@ViewData["UrlPath"]/api/AddAuthorizedService/getInboxCount",
            success: function (data) {
                $(".unreadFlags").text(data.readFlagsNothingCount);
            },
            error: function (e) {


            },
            cache: false
        });

    }
    $("#AddAuthorizedService").addClass("active");
</script>
