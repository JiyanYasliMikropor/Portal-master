<script>
    var filesToUpload = [];

    $.fn.fileUploader = function (filesToUpload, sectionIdentifier) {
        var fileIdCounter = 0;

        this.closest(".files").change(function (evt) {
            var output = [];

            for (var i = 0; i < evt.target.files.length; i++) {
                fileIdCounter++;

                var file = evt.target.files[i];
                var fileId = sectionIdentifier + fileIdCounter;

                filesToUpload.push({
                    id: fileId,
                    file: file
                });

                var removeLink = "<div class=\"removeFile btn btn-danger btn-xs\" data-fileid=\"" + fileId + "\"><i class='fa fa-times-circle-o' aria-hidden='true'></i></div>";

                var dataContent = "";

                if (file.type == "image/jpeg" || file.type == "image/png") {
                    dataContent += "<li class='file-box'>" +
                        //removeLink +
                        "<div class='file'>" +
                        "<a href='#'>" +
                        "<span class='corner'></span>" +

                        "<div class='icon'>" +
                        "<img alt='image' class='feed-photo' src=" + (window.URL ? URL : webkitURL).createObjectURL(file) + ">" +
                        "</div>" +
                        "<div class='file-name'>" +
                        escape(file.name) +
                        "<br>" +

                        "</div>" +
                        "</a>" +
                        "</div>" +
                        "</li>";
                } else {
                    dataContent += "<li class='file-box'>" +
                        //removeLink +
                        "<div class='file'>" +
                        "<a href='#'>" +
                        "<span class='corner'></span>" +

                        "<div class='icon'>" +
                        "<i class='fa fa-file'></i>" +
                        "</div>" +
                        "<div class='file-name'>" +
                        escape(file.name) +
                        "<br>" +

                        "</div>" +
                        "</a>" +
                        "</div>" +
                        "</li>";
                }


                $(".attachment").append(dataContent);

            };
            //evt.target.value = null;
        });

        this.clear = function () {
            for (var i = 0; i < filesToUpload.length; ++i) {
                if (filesToUpload[i].id.indexOf(sectionIdentifier) >= 0)
                    filesToUpload.splice(i, 1);
            }

            $(this).children(".fileList").empty();
        }

        return this;
    };

    (function () {
        var files1Uploader = $("#files").fileUploader(filesToUpload, "files");

    })()


    $('body').on('click', '.removeFile', function (e) {
        var fileId = $(this).data("fileid");
        // loop through the files array and check if the name of that file matches FileName
        // and get the index of the match
        for (var i = 0; i < filesToUpload.length; ++i) {
            if (filesToUpload[i].id === fileId)
                filesToUpload.splice(i, 1);
        }
        $(this).parent().remove();

        //$("#files").fileUploader(filesToUpload)
        $("#files").attr("value", filesToUpload);
    });

    var machineHistory;

    if (machineHistory == null) {
        $("#mashineHistoryBtn").css("display", "none");
    }

    $("#RepairAndMaintenanceDate").datepicker({
        todayBtn: "linked",
        language: "tr",
        autoclose: true,
        todayHighlight: true,
    });


    //Seri numarasını kontrol etmek için gerekli fonksiyonlar.
    $("#SerialNoCheckButton").on("click", function () {

        var serialNo = $("#SerialNo").val();
        if (serialNo == null || serialNo == undefined || serialNo == '') {
            //Uyarı için gerekli fonkisiyon
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-center",
                showMethod: 'slideDown',
                timeOut: 4000
            };
            toastr.warning('Seri Numarası Girilmemiş!');
        } else {
            $.ajax({
                type: "GET",
                dataType: 'json',
                data: { serialNo: $("#SerialNo").val() },
                url: "@ViewData["UrlPath"]/api/RepairAndMaintenance/SerialNoCheckAndHistory",
                beforeSend: function () { $('#SerialNoCheckButton').ladda().ladda('start'); },
                success: function (data) {
                    if (data.isSuccess) {

                        if (data.isModal == true) {

                            $("#KurulumYonlendirmeModal").modal("show");

                        } else {

                            $("#RepairAndMaintenanceForm .hidden").removeClass("hidden");
                            $("#SerialNoCheckButton").addClass("hidden");

                            $("#SkuCode").val(data.machineDetail[0].skuId);
                            $("#TracingName").val(data.machineDetail[0].sku);

                            machineHistory = data.machineHistory;
                            if (machineHistory != null) {
                                $("#mashineHistoryBtn").css("display", "block");
                            }
                        }
                    }
                },
                complete: function () { $('#SerialNoCheckButton').ladda().ladda('stop'); },
                error: function (e) {
                    toastr.options = {
                        closeButton: true,
                        progressBar: true,
                        positionClass: "toast-top-center",
                        showMethod: 'slideDown',
                        timeOut: 4000
                    };
                    toastr.error(data.errorMessage)
                },
                cache: false
            });
        }
    });
    //Makine geçmişini listelemek için gerekli fonksiyonlar
    $("#mashineHistoryBtn").on("click", function () {
        var tr = "<tr>";
        $(machineHistory).each(function (index, element) {
            var serviceName;
            var machineStartedDate;
            var serviceDate;
            var compressorInformation;
            var changedPartsComment;
            var machineComment;
            var customerComment;
            var customerComplaint;

            if (element.serviceName == null || element.serviceName == undefined || element.serviceName == '')
                serviceName = ''
            else
                serviceName = element.serviceName

            if (element.machineStartedDate == null || element.machineStartedDate == undefined || element.machineStartedDate == '')
                machineStartedDate = ''
            else
                machineStartedDate = element.machineStartedDate


            if (element.serviceDate == null || element.serviceDate == undefined || element.serviceDate == '')
                serviceDate = ''
            else
                serviceDate = element.serviceDate


            if (element.compressorInformation == null || element.compressorInformation == undefined || element.compressorInformation == '')
                compressorInformation = ''
            else
                compressorInformation = element.compressorInformation


            if (element.changedPartsComment == null || element.changedPartsComment == undefined || element.changedPartsComment == '')
                changedPartsComment = ''
            else
                changedPartsComment = element.changedPartsComment


            if (element.machineComment == null || element.machineComment == undefined || element.machineComment == '')
                machineComment = ''
            else
                machineComment = element.machineComment

            if (element.customerComment == null || element.customerComment == undefined || element.customerComment == '')
                customerComment = ''
            else
                customerComment = element.customerComment

            if (element.customerComplaint == null || element.customerComplaint == undefined || element.customerComplaint == '')
                customerComplaint = ''
            else
                customerComplaint = element.customerComplaint

            tr += "<td>" + serviceName + "</td>";
            tr += "<td>" + machineStartedDate + "</td>";
            tr += "<td>" + serviceDate + "</td>";
            tr += "<td>" + compressorInformation + "</td>";
            tr += "<td>" + changedPartsComment + "</td>";
            tr += "<td>" + machineComment + "</td>";
            tr += "<td>" + customerComment + "</td>";
            tr += "<td>" + customerComplaint + "</td>";
            tr += "</tr>";
        });
        $('#machineHistoryDataContent').append(tr);
        $("#MachineHistoryModal").modal("show");
    });

   var base_url = window.location.origin;

